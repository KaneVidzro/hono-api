// @file: prisma/schema.prisma

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model User {
    id            String    @id @default(cuid())
    name          String?
    password      String?
    email         String    @unique
    sessions      Session[]
    emailVerified DateTime?

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Session {
    id           String   @id @default(cuid())
    userId       String
    sessionToken String   @unique
    userAgent    String?
    ipAddress    String?
    expires      DateTime
    createdAt    DateTime @default(now())
    updatedAt    DateTime @updatedAt

    user User @relation(fields: [userId], references: [id])
}

// Model for storing verification tokens (magic links, email verification, etc.)
model VerificationToken {
    id        String   @id @default(cuid())
    email     String
    token     String   @unique
    expiresAt DateTime

    @@index([token])
    @@index([email])
}

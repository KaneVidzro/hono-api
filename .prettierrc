{
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,

  "singleQuote": true,
  "trailingComma": "all",
  "bracketSpacing": true,
  "arrowParens": "always",

  "overrides": [
    {
      "files": "*.json",
      "options": {
        "singleQuote": false,
        "trailingComma": "none"
      }
    },
    {
      "files": "*.prisma",
      "options": {
        "singleQuote": true
      }
    }
  ]
}
